[Unit]
Description=Create ap0 interface
After=NetworkManager.service

[Service]
Type=oneshot
RemainAfterExit=true
ExecStart=/sbin/iw phy phy0 interface add ap0 type __ap
ExecStartPost=/usr/bin/ip link set dev ap0 address 00:11:22:33:44:55
ExecStartPost=/sbin/ifconfig ap0 up
ExecStartPost=/usr/bin/ip addr add 192.168.4.1/24 dev ap0
ExecStop=/sbin/iw dev ap0 del

[Install]
WantedBy=multi-user.target
